#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Ensure tmp/pids directory exists (may be overridden by volume mount)
mkdir -p tmp/pids

# Remove stale server.pid if the recorded process is not running
if [ -f tmp/pids/server.pid ]; then
  PID=$(cat tmp/pids/server.pid || true)
  if [ -n "$PID" ] && ! ps -p "$PID" > /dev/null 2>&1; then
    echo "Removing stale tmp/pids/server.pid (PID $PID not running)"
    rm -f tmp/pids/server.pid
  fi
fi

# If command includes rails server, prepare (create/migrate) database.
# Works whether using: bundle exec rails server ... OR bin/rails server ...
if echo "$*" | grep -q "rails" && echo "$*" | grep -q "server"; then
  echo "Running db:prepare before starting Rails server"
  # db:prepare handles create + migrate + schema load if needed
  bundle exec rails db:prepare || ./bin/rails db:prepare
fi

# Optional automatic reset if ALWAYS_RESET_DB=1 (not default)
if [ "${ALWAYS_RESET_DB}" = "1" ]; then
  echo "ALWAYS_RESET_DB=1 -> Performing full db reset"
  bundle exec rails db:drop db:create db:migrate || ./bin/rails db:drop db:create db:migrate
fi

exec "$@"
